* * *
* *
*


n=3
for i in range(n):
    for j in range(i+1):
        print("*",end=" ")
    print()
for i in range(n-1):
    for j in range(n-i-1):
        print("*",end=" ")
    print()

#there is a right angled triangle so we have to take i+1 in j loop
---------------------------------------------------------------------

  * 
 * * 
* * * 


n=3
for i in range(n):
    for j in range(n-i-1):
        print(" ",end="")  # to get *s in b/w remove the space at end (end="")
    for j in range(i+1):
        print("*",end=" ")
    print()

