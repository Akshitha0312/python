#n=4

1 
0 1 
1 0 1 
0 1 0 1 

n=4
for i in range(n):
    for j in range(i+1):
        if(((i+j)%2)==0):
            print("1",end=" ")
        else:
            print("0",end=" ")
    print()

#there is a right angled triangle so we have to take i+1 in j loop
#add row no. and col no....if we get an even number then print 1,otherwise print 0
---------------------------------------------------------------------------------------------

# n=3

1         1 
1 2     2 1 
1 2 3 3 2 1 


n=3
for i in range(n):
    for j in range(i+1):
        print(j+1,end=" ")
    for j in range(n-i-1):
        print(" ",end=" ")
    for j in range(n-i-1):
        print(" ",end=" ")
    for j in range(i+1,0,-1):
        print(j,end=" ")
    print()

-----------------------------------------------------------------------------------------------





